<div class="jombotron p-3 mb-2 bg-secondary-subtle text-secondary-emphasis">
  <h1 class="display-4"><%= @friend.first_name %>  <%= @friend.last_name %> </h1>
  <p class="lead">
    <%= @friend.email %>  <%= @friend.phone %>  <%= @friend.github %>
  </p>
  <br><br>
  <div class="d-inline-flex p-2 ">
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %> 
    <%= button_to "Delete", @friend, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger mx-3" %>
    <%= link_to "Back", friends_path,class:"btn btn-dark" %> 
  </div>
</div>


